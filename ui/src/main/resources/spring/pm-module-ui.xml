<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <mvc:resources mapping="/app/pm/script/**" location="/WEB-INF/script/" />
    <mvc:resources mapping="/app/pm/page/**" location="/WEB-INF/page/" />
    <mvc:resources mapping="/app/pm/css/**" location="/WEB-INF/css/" />
    <mvc:resources mapping="/app/pm/images/**" location="/WEB-INF/images/" />
    <mvc:resources mapping="/app/pm/resources/**" location="/WEB-INF/resources/" />
    <mvc:resources mapping="/app/pm/js/**" location="/WEB-INF/js/" />
    <mvc:annotation-driven />
</beans>